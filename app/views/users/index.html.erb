<div class="container"> <!-- ここを追加 -->
		<div class="row">

			<div class="col-xs-3">
				<%= render 'users/list', user: @user %>
				<%= render 'blogs/list', blog: @blog %>

			</div>

			<div class="col-xs-9">
				

				<h1 class="Books">Users</h1>

				<section class=tablebox>
					<table class="table">
						<thead>
							<tr>
								 <th class="bookbox1">image</th>
								 <th class="bookbox2">name</th>
								 <th colspan="3"></th>
								<th></th>
								<th></th>
								<th></th>
							</tr>
						</thead>

						<tbody>
							<% @blogs.each do |blog| %>
								<tr>
									<td><%= attachment_image_tag blog.user, :image, :fill,40,40, format:"jpeg",fallback:"no_image.jpg"%></td>
									<td><%= blog.title %></td>
									<td><%= blog.body %></td>
									<td><%= link_to 'show', blog_path(blog.id) %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</section>
			</div>



		</div>

	</div>