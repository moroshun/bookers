<section class="editbox">
<h1>Editing Book</h1>
<%= form_for(@blog) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <div><%= f.submit 'Update Book' %></div>

    <div><%= link_to 'Show', blog_path(@blog.id) %> | <%= link_to 'Back', blogs_path(@blog.id) %></div>

<% end %>
</section>