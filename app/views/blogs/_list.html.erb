 <h1>New book</h1>

<% if blog.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
        <!-- form_for部分 -->
        <%= form_for(blog) do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
       
          <%= f.text_area :body %>
            <div class="create">
              <%= f.submit 'Create Book' %>
            </div>
          <% end %>