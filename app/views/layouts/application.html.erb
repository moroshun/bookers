<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
                <h1 class="bookers">Bookers</h1>
     <nav class="navlist">
         <ul class="allnav2">
          <li class="allnav">
              <% if user_signed_in? %>
                <li class="home">
                <%= link_to "Home", user_path(current_user)%></li>
                <li class="user">
                <%= link_to "Users", users_path %></li>
                <li class="books">
                <%= link_to "Books", blogs_path%></li>
                <li class="logout">
                <%= link_to "logout", destroy_user_session_path, method: :delete %>
              </li>

      <% else %>
                <li class="home">
                  <%= link_to "Home", root_path%></li>
                 <li class="about">
                  <%= link_to "About", home_about_path %></li>
                  <li class="signup">
                  <%= link_to "sign up", blogs_path%></li>
                  <li class="login">
                  <%= link_to "login", destroy_user_session_path, method: :delete %>
                  </li>
           </li>
       <% end %>
    </ul>
  </nav>
</header>
<!-- <table class="table table-striped"> -->


    <%= yield %>
  </body>
</html>
